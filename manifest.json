{
  "manifest_version": 3,
  "name": "AI Text Assistant",
  "version": "1.0",
  "description": "Enhance text areas with Gemini AI suggestions",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
} 